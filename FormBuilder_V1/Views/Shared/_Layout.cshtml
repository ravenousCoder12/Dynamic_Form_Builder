<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Agbalumo&display=swap" rel="stylesheet">
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastr@2.1.4/toastr.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/07d16ebcb8.js" crossorigin="anonymous"></script>

    <style>
        html {
            height: 100%;
        }

        body {
            height: 100%;
        }

            body::before {
                content: "";
                background-image: url('https://r4.wallpaperflare.com/wallpaper/375/1004/16/5k-cgi-dark-mountains-wallpaper-47df42946f153faaff62643181112735.jpg');
                /* Full height */
                height: 100%;
                /* Full width */
                width: 100%;
                position: fixed;
                top: 0;
                left: 0;
                z-index: -1;
                /* Center and scale the image nicely */
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;
                background-blend-mode: darken;
                filter: brightness(0.9); /* Reduce brightness */
            }

        .rbody {
            height: 100%;
            overflow-x: hidden;
        }

        .navbar-brand {
            font-family: "Agbalumo", sans-serif;
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" data-bs-theme="dark" style="background-color: #24292e ">
        <div class="container">
            @Html.ActionLink("Quickforms", "LandingPage", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse">
                @if (HttpContext.Current.Session["UserName"] != null && HttpContext.Current.Session["UserName"] != "")
                {

                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">@Html.ActionLink("Create", "CreateForm", "User", new { area = "" }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Profile", "UserProfile", "User", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                    
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="">@Html.ActionLink("Hi, "+Convert.ToString(Session["UserName"]).ToLower(), "UserProfile", "User", new { area = "" }, new { @class = "nav-link" })</li>
                        <li class="nav-link"><a href="/User/SignOut"><i class="fa-solid fa-arrow-right-from-bracket" style="color: #a1a7af;"></i></a></li>
                    </ul>

                }




            </div>
            @*<div class="collapse navbar-collapse  d-sm-inline-flex justify-content-end">
        <i class="fa-solid fa-arrow-right-from-bracket" style="color: #a8b2c2;"></i>
            @if (HttpContext.Current.Session["UserName"] != null && HttpContext.Current.Session["UserName"] != "")
            {
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <b>hello</b>

                    </li>
                </ul>
            }


        </div>*@
        </div>
    </nav>
    <div class="rbody body-content">
        @RenderBody()
        

    </div>
    <div>
        <footer class="bg-dark">
            <p class="text-light  opacity-50 text-capitalize font-monospace d-flex justify-content-end px-2">© 2023 Quickforms, Inc</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

